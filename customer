      <div className="w-20 h-20 bg-gradient-to-br from-amber-100 to-orange-100 rounded-full flex items-center justify-center mb-5 shadow-inner">
        <Icon className="text-amber-600" size={36} />
      </div>
      <h3 className="text-xl font-bold text-stone-800 mb-2 font-serif">{title}</h3>
      <p className="text-stone-500 text-sm mb-8 leading-relaxed">{subtitle}</p>
      <button
        onClick={onSearch}
        className="w-full bg-gradient-to-r from-amber-500 via-amber-600 to-orange-500 text-white py-4 rounded-2xl font-bold text-base mb-3 hover:shadow-lg hover:shadow-amber-500/30 transition-all duration-300 active:scale-[0.98]"
      >
        חיפוש עסקים
      </button>
