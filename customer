      >
        התחברות או הרשמה
      </button>
    </div>
  </div>
);

// Barber Card Component - Redesigned
const BarberCard = ({ barber, onSelect, isFavorite, onToggleFavorite }) => (
  <div 
    className="bg-white rounded-3xl overflow-hidden shadow-xl shadow-stone-200/50 mx-4 mb-5 cursor-pointer hover:shadow-2xl hover:shadow-stone-300/50 transition-all duration-500 border border-stone-100 group"
    onClick={() => onSelect(barber)}
  >
    {/* Image Section */}
    <div className="relative h-52">
      <BarberShopImage className="w-full h-full" />
      
      {/* Favorite Button */}
      <button
        onClick={(e) => {
          e.stopPropagation();
          onToggleFavorite(barber.id);
        }}
        className="absolute top-4 left-4 w-11 h-11 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center shadow-lg transition-transform duration-300 hover:scale-110 active:scale-95"
      >
        <Heart 
          size={22} 
          className={`transition-colors duration-300 ${isFavorite ? 'fill-red-500 text-red-500' : 'text-stone-600'}`}
        />
      </button>
      
      {/* Distance Badge */}
      <div className="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-4 py-2 rounded-full shadow-lg">
        <span className="text-sm font-bold text-stone-700">{barber.distance}</span>
      </div>
      
      {/* Logo - positioned at bottom */}
      <div className="absolute -bottom-8 right-6">
        <LogoPlaceholder name={barber.name} size="md" />
      </div>
    </div>
    
    {/* Content Section */}
    <div className="pt-12 pb-5 px-5">
      {/* Header */}
      <div className="flex items-start justify-between mb-3">
        <div className="flex items-center gap-1.5">
          <Star className="fill-amber-400 text-amber-400" size={18} />
          <span className="font-bold text-stone-800">{barber.rating.toFixed(1)}</span>
          <span className="text-stone-400 text-sm">({barber.reviews})</span>
        </div>
        <div className="text-right">
          <h3 className="font-bold text-lg text-stone-800 font-serif">{barber.name}</h3>
          <p className="text-stone-500 text-sm flex items-center justify-end gap-1 mt-0.5">
            <span>{barber.address}</span>
            <MapPin size={14} />
          </p>
        </div>
      </div>
      
      {/* Quote */}
      <div className="flex items-center justify-between pt-3 border-t border-stone-100">
        <button className="bg-stone-100 hover:bg-amber-100 text-stone-600 hover:text-amber-700 px-4 py-2 rounded-full text-sm font-semibold transition-colors duration-300">
          קביעת תור
        </button>
        <p className="text-stone-500 text-sm italic">"{barber.quote}"</p>
      </div>
    </div>
  </div>
);

