// Barber Shop Image Placeholder Component
const BarberShopImage = ({ className = "" }) => (
  <div className={`bg-gradient-to-br from-stone-800 via-stone-900 to-black relative overflow-hidden ${className}`}>
    {/* Pattern overlay */}
    <div className="absolute inset-0 opacity-20">
      <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="barberPattern" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
            <path d="M20 0L40 20L20 40L0 20Z" fill="none" stroke="#C9A962" strokeWidth="0.5"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#barberPattern)"/>
      </svg>
    </div>
    {/* Scissors icon */}
    <div className="absolute inset-0 flex items-center justify-center">
      <div className="relative">
        <Scissors className="text-amber-500/30" size={64} />
        <div className="absolute -inset-4 border border-amber-500/20 rounded-full"></div>
        <div className="absolute -inset-8 border border-amber-500/10 rounded-full"></div>
      </div>
    </div>
    {/* Gradient overlay */}
    <div className="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
  </div>
);

// Logo Placeholder
const LogoPlaceholder = ({ name, size = "md" }) => {
  const sizes = {
    sm: "w-12 h-12 text-lg",
    md: "w-16 h-16 text-xl",
    lg: "w-24 h-24 text-3xl"
  };
  
  const initials = name.split(' ').map(w => w[0]).join('').slice(0, 2);
  
  return (
    <div className={`${sizes[size]} rounded-2xl bg-gradient-to-br from-amber-500 via-amber-600 to-amber-700 flex items-center justify-center shadow-lg shadow-amber-500/20`}>
      <span className="font-bold text-white font-serif">{initials}</span>
    </div>
  );
};

// ============ COMPONENTS ============

// Bottom Navigation
const BottomNav = ({ activeTab, setActiveTab }) => {
  const tabs = [
    { id: 'profile', label: 'פרופיל', icon: User },
    { id: 'search', label: 'חיפוש', icon: Search },
    { id: 'appointments', label: 'התורים שלי', icon: Calendar },
    { id: 'favorites', label: 'מועדפים', icon: Heart },
  ];

  return (
    <nav className="fixed bottom-0 left-0 right-0 bg-white/95 backdrop-blur-xl border-t border-stone-100 px-2 pb-6 pt-3 z-50">
      <div className="flex justify-around items-center max-w-md mx-auto">
        {tabs.map((tab) => {
          const Icon = tab.icon;
          const isActive = activeTab === tab.id;
          return (
            <button
              key={tab.id}
              onClick={() => setActiveTab(tab.id)}
              className={`flex flex-col items-center py-2 px-5 rounded-2xl transition-all duration-300 ${
                isActive 
                  ? 'bg-gradient-to-br from-amber-50 to-orange-50 text-amber-700' 
                  : 'text-stone-400 hover:text-stone-600'
              }`}
            >
              <Icon size={22} strokeWidth={isActive ? 2.5 : 1.8} />
              <span className={`text-xs mt-1.5 ${isActive ? 'font-bold' : 'font-medium'}`}>
                {tab.label}
              </span>
            </button>
          );
        })}
      </div>
    </nav>
  );
};

// Empty State Component
